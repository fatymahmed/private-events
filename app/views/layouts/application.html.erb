<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Private Events', root_path, class: "navbar-brand" %> 
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Show Events', root_path %> </li>
        <% if current_user.nil? %>
          <li><%= link_to 'Sign Up', new_user_path %></li>
          <li><%= link_to 'Log in', signin_path %></li>
        <% else %>
          <li><%= link_to current_user.name, user_path(current_user) %></li>
          <li><%= link_to 'Create Event', new_event_path %></li>
          <li><%= link_to 'View Events', root_path %></li>
          <li><%= link_to 'Log Out', current_user, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
