<div class="jumbotron custom-bg">
        <div class="media">
          <div class="media-left">
            <img src="https://picsum.photos/200" alt="Random event">
          </div>
          <div class="media-body">
            <h2><%= link_to event.description, event %></h2>
            <h3><%= event.date %></h3>
            <h4><%= event.location %></h4>
            <h4>Created by: <%= event.creator.name %></h4>
            <% if :button && event.creator != current_user && current_user.attended_events.find_by(id: event.id).nil? && event.date >= Date.today %>
              <%= link_to "Attend Event", attend_event_path(event), class: 'btn btn-primary'   %>
            <% end %>
          </div>
        </div>
      </div>